<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="3000dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">
        <ImageView
            android:background="@mipmap/ic_launcher"
            android:id="@+id/mImageViewBanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="考研倒计时"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:textSize="13sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mTextViewDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="25sp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="天"
                    android:layout_gravity="bottom"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/mTextViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="倒计时"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <jyx.com.aw.view.percentcircle.PercentLemon
                android:layout_marginTop="10dp"
                android:id="@+id/mPercentLemon"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:skinDepth="5"
                app:duration="0"
                app:skinStartColor="#58759f"
                app:skinEndColor="#58759f"
                app:heartClickedColor="#00000000"
                app:heartColor="#00000000"
                app:percent="66.6" />
            <TextView
                android:id="@+id/mTextViewSlogan"
                android:layout_below="@+id/mPercentLemon"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:gravity="bottom"
                android:layout_below="@+id/mTextViewSlogan"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/ll_week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/mWeek1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SUN"
                        android:textSize="11sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/mWeek2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="MON"
                        android:textSize="11sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/mWeek3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="TUE"
                        android:textSize="11sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/mWeek4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="WED"
                        android:textSize="11sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/mWeek5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="THU"
                        android:textSize="11sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/mWeek6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="FRI"
                        android:textSize="11sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/mWeek7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="STA"
                        android:textSize="11sp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <ViewFlipper
                    android:id="@+id/flipper1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_week" />
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>