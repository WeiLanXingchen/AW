<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical">
   <ImageView
       android:id="@+id/mImageViewAllResponseIcon"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:src="@mipmap/ic_launcher"
       />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="15dp">
    <TextView
        android:id="@+id/mTextViewAllResponseUserName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="用户名"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/mTextViewAllResponseContext"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"
        />
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mTextViewAllResponseUpdateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5小时前"/>
        <TextView
            android:id="@+id/mTextViewAllResponseAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赞同"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/mTextViewAllResponseDisAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反对"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/mTextViewAllResponseAgree"/>
    </RelativeLayout>
</LinearLayout>

</LinearLayout>