<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <FrameLayout
        android:id="@+id/fl_topContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <jyx.com.aw.view.CustomSwipeToRefresh
        android:id="@+id/cv_customSwipeToRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fl_bottomContainer"
        android:layout_below="@id/fl_topContainer"
        android:background="@color/background" />

    <FrameLayout
        android:id="@+id/fl_bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

    <jyx.com.aw.view.ReloadView
        android:id="@+id/load_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
