<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/mTextViewExperienceTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上海交通大学"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/mTextViewExperienceAbstract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/experience_text_color"
        android:text="" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:background="@drawable/read_number"/>
        <TextView
            android:id="@+id/mTextViewExperienceViews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="13sp"
            android:textColor="@color/experience_text_color"
            android:text="3" />
    </LinearLayout>
</LinearLayout>