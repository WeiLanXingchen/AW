<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/mLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="11"
        android:orientation="horizontal"
        android:padding="15dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mTextViewDailyListTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_deep"
                android:textSize="17sp"
                android:text="hjfdbfdjbfdjbfdj"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mTextViewDailyListViews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hjfdbfdjbfdjbfdj"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/mTextViewDailyListUpdateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="hjfdbfdjbfdjbfdj"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/mImageViewDailyListIcon"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="65dp"
            android:scaleType="centerCrop"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mLinearLayoutFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/mImageViewDailyListIconFirst"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/mTextViewDailyListTitleFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_deep"
            android:textSize="17sp"
            android:text="hjfdbfdjbfdjbfdj"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mTextViewDailyListViewsFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hjfdbfdjbfdjbfdj"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/mTextViewDailyListUpdateTimeFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hjfdbfdjbfdjbfdj"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
